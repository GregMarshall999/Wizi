<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Wizi.AppBarOverlay"/>

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <View
        android:id="@+id/external_circle"
        android:layout_height="400dp"
        android:layout_width="400dp"
        android:background="@drawable/red_circle"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_horizontal|center"/>

    <View
        android:id="@+id/internal_circle"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:background="@drawable/green_circle"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_horizontal|center"/>

    <View
        android:id="@+id/center_pin"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/pin"
        android:translationX="0dp"
        android:translationY="0dp"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_horizontal|center" />

    <TextView
        android:id="@+id/text_accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acc"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="start|bottom" />

    <TextView
        android:id="@+id/text_gyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gyro"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="end|bottom" />

    <TextView
        android:id="@+id/text_Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linear_acc"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_horizontal|bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>